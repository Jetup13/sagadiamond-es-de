<theme>
	<fontSize name="medium">
	<variables>
		<descriptionSize>0.45 0.3105</descriptionSize>
		<descriptionFontSize>0.03</descriptionFontSize>
		<gameNamePOS>0.035 0.65</gameNamePOS>
		<gameNameFontSize>0.045</gameNameFontSize>
	</variables>
	</fontSize>
	<fontSize name="large">
	<variables>
		<descriptionSize>0.47 0.3105</descriptionSize>
		<descriptionFontSize>0.04</descriptionFontSize>
		<gameNamePOS>0.035 0.65</gameNamePOS>
		<gameNameFontSize>0.05</gameNameFontSize>
	</variables>
	</fontSize>

	<variant name="withVideos">
	<view name="gamelist">	
		<video name="gameVideo">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<maxSize>2 1</maxSize>
			<opacity>0.8</opacity>
			<imageType>screenshot</imageType>
			<delay>2</delay>
			<scrollFadeIn>true</scrollFadeIn>
			<gradientType>vertical</gradientType>
			<colorEnd>00000000</colorEnd>
			<zIndex>14</zIndex>
		</video>
	</view>
	
	<view name="system">
		<gameselector name="selector-random">
			<selection>random</selection>
		</gameselector>
		<video name="systemVideo">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<maxSize>2 1</maxSize>
			<opacity>0.8</opacity>
			<gameselector>selector-random</gameselector>
			<fadeInTime>8</fadeInTime>
			<scrollFadeIn>true</scrollFadeIn>
			<gradientType>vertical</gradientType>
			<colorEnd>00000000</colorEnd>
			<zIndex>14</zIndex>
		</video>
	</view>
	</variant>
	
	<variant name="withImages">
	<view name="gamelist">	
		<image name="gameImage">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<maxSize>2 1</maxSize>
			<opacity>0.8</opacity>
			<imageType>screenshot</imageType>
			<scrollFadeIn>true</scrollFadeIn>
			<gradientType>vertical</gradientType>
			<colorEnd>00000000</colorEnd>
			<zIndex>14</zIndex>
		</image>
	</view>
	
	<view name="system">
		<gameselector name="selector-random">
			<selection>random</selection>
		</gameselector>
		<image name="systemImage">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<maxSize>2 1</maxSize>
			<opacity>0.8</opacity>
			<gameselector>selector-random</gameselector>
			<imageType>screenshot</imageType>
			<scrollFadeIn>true</scrollFadeIn>
			<gradientType>vertical</gradientType>
			<colorEnd>00000000</colorEnd>
			<zIndex>14</zIndex>
		</image>
	</view>
	</variant>	

	<view name="system">
		<carousel name="systemCarousel">
			<pos>0.5 0.5</pos>
			<size>1.5 1</size>
			<origin>0.5 0.5</origin>
			<maxItemCount>2.25</maxItemCount>
			<itemSize>0.5 0.5</itemSize>
			<itemScale>1</itemScale>
			<selectedItemMargins>0 0</selectedItemMargins>
			<itemScale>1.6</itemScale>
		</carousel>

		<text name="sys_line1">
			<pos>0.035 0.65</pos>
			<size>0.5 0.3105</size>
			<fontSize>0.04</fontSize>
		</text>
		<text name="sys_line2">
			<pos>0.035 0.70</pos>
			<size>0.7 0.3105</size>
			<fontSize>0.052</fontSize>
		</text>
		<text name="longdescription">
			<pos>0.5 0.6</pos>
			<size>0.45 0.3105</size>
			<container>true</container>
			<containerScrollSpeed>1</containerScrollSpeed>
			<containerStartDelay>3</containerStartDelay>
			<containerResetDelay>6</containerResetDelay>
			<fontSize>0.040</fontSize>
			<visible>false</visible>
		</text>
		<text name="shortdescription">
			<pos>0.035 0.88</pos>
			<size>0 0</size>
			<fontSize>0.025</fontSize>
		</text>
		<image name="lineUpperLeft">
			<pos>0.0 0.07</pos>
			<size>0.9 0.002</size>
			<origin>0 0</origin>
		</image>
		<image name="lineBottomLeft">
			<pos>0.0 0.93</pos>
			<size>0.9 0.002</size>
			<origin>0 0</origin>
		</image>
		<image name="darkbackground">
			<visible>false</visible>
		</image>
	</view>
	<view name="gamelist">
		<carousel name="gamelistCarousel">
			<pos>0.5 0.425</pos>
			<size>1.4 1</size>
			<origin>0.5 0.5</origin>
			<maxItemCount>2.5</maxItemCount>
			<itemSize>0.45 .5</itemSize>
			<selectedItemOffset>0 0</selectedItemOffset>
			<selectedItemMargins>.0 0</selectedItemMargins >
			<itemScale>1.35</itemScale>
			<color>00000000</color>
		</carousel>
		
		<text name="description">
			<pos>0.5 0.6</pos>
			<size>${descriptionSize}</size>
			<container>true</container>
			<containerScrollSpeed>1</containerScrollSpeed>
			<containerStartDelay>3</containerStartDelay>
			<containerResetDelay>6</containerResetDelay>
			<fontSize>${descriptionFontSize}</fontSize>
			<visible>false</visible>
		</text>

		<text name="name">
			<pos>${gameNamePOS}</pos>
			<size>0.9 0.35</size>
			<fontSize>${gameNameFontSize}</fontSize>
		</text>
		
		<datetime name="releasedate">
			<pos>0.035 0.88</pos>
			<size>0 0</size>
			<fontSize>0.025</fontSize>
		</datetime>

		<text name="dot">
			<pos>0.10105 0.88</pos>
			<size>0 0</size>
			<fontSize>0.025</fontSize>
		</text>
		
		<text name="systemName">
			<pos>0.12 0.88</pos>
			<size>0 0</size>
			<fontSize>0.025</fontSize>
		</text>
		
		<image name="lineUpperLeft">
			<pos>0.0 0.07</pos>
			<size>0.9 0.002</size>
			<origin>0 0</origin>
		</image>
		<image name="lineBottomLeft">
			<pos>0.0 0.93</pos>
			<size>0.9 0.002</size>
			<origin>0 0</origin>
		</image>
		<image name="darkbackground">
			<visible>false</visible>
		</image>
	</view>
	<view name="gamelist, system">
		<helpsystem name="help">
			<entries>
				back,
				start,
				a,
				b,
				y,
				l,
				r,
				lt,
				rt,
				left/right,
				down,
				up,
				up/down,
				up/down/left/right,
				ltrt,
				lr
			</entries>
			<pos>0.012 0.9515</pos>
			<fontSize>0.030</fontSize>
		</helpsystem>
	</view>
</theme>