<theme>
	<fontSize name="medium">
	<variables>
		<descriptionSize>0.45 0.3105</descriptionSize>
		<descriptionFontSize>0.03</descriptionFontSize>
		<gameNamePOS>0.5 0.25</gameNamePOS>
		<gameNameFontSize>0.045</gameNameFontSize>
	</variables>
	</fontSize>
	<fontSize name="large">
	<variables>
		<descriptionSize>0.47 0.3105</descriptionSize>
		<descriptionFontSize>0.04</descriptionFontSize>
		<gameNamePOS>0.5 0.2</gameNamePOS>
		<gameNameFontSize>0.05</gameNameFontSize>
	</variables>
	</fontSize>

	<view name="system">
		<carousel name="systemCarousel">
			<pos>.25 0.5</pos>
			<size>1.5 1</size>
			<origin>0.5 0.5</origin>
			<maxItemCount>4.25</maxItemCount>
			<itemSize>0.34 0.5</itemSize>
			<itemScale>1</itemScale>
			<selectedItemMargins>.25 0.1</selectedItemMargins>
			<itemScale>1.48</itemScale>
		</carousel>
		<text name="sys_line1">
			<pos>0.5 0.24</pos>
			<size>0.5 0.3105</size>
			<fontSize>0.048</fontSize>
		</text>
		<text name="sys_line2">
			<pos>0.5 0.29</pos>
			<size>0.5 0.3105</size>
			<fontSize>0.06</fontSize>
		</text>
		<text name="longdescription">
			<pos>0.5 0.6</pos>
			<size>0.45 0.3105</size>
			<container>true</container>
			<containerScrollSpeed>1</containerScrollSpeed>
			<containerStartDelay>3</containerStartDelay>
			<containerResetDelay>6</containerResetDelay>
			<fontSize>0.040</fontSize>
		</text>
		<text name="platformyear">
			<pos>0.5 0.55</pos>
			<size>0 0</size>
			<fontSize>0.03</fontSize>
		</text>
		<text name="dot">
			<pos>0.5625 0.55</pos>
			<size>0 0</size>
			<fontSize>0.03</fontSize>
		</text>
		<text name="category">
			<pos>0.582 0.55</pos>
			<size>0 0</size>
			<fontSize>0.03</fontSize>
		</text>
	</view>

	<view name="gamelist">
		<carousel name="gamelistCarousel">
			<pos>.25 0.5</pos>
			<size>1.5 1</size>
			<origin>0.5 0.5</origin>
			<maxItemCount>4.25</maxItemCount>
			<itemSize>0.3 0.5</itemSize>
			<selectedItemOffset>0 0</selectedItemOffset>
			<selectedItemMargins>.25 0.1</selectedItemMargins >
			<itemScale>1.48</itemScale>
			<itemStacking>descending</itemStacking>
			<color>00000000</color>
		</carousel>	
		<text name="description">
			<pos>0.5 0.6</pos>
			<size>${descriptionSize}</size>
			<container>true</container>
			<containerScrollSpeed>1</containerScrollSpeed>
			<containerStartDelay>3</containerStartDelay>
			<containerResetDelay>6</containerResetDelay>
			<fontSize>${descriptionFontSize}</fontSize>
		</text>
		<text name="name">
			<pos>${gameNamePOS}</pos>
			<size>0.45 0.3105</size>
			<fontSize>${gameNameFontSize}</fontSize>
		</text>
		<datetime name="releasedate">
			<pos>0.5 0.55</pos>
			<size>0 0</size>
			<fontSize>0.03</fontSize>
		</datetime>
		<text name="dot">
			<pos>0.5625 0.55</pos>
			<size>0 0</size>
			<fontSize>0.03</fontSize>
		</text>
		<text name="systemName">
			<pos>0.582 0.55</pos>
			<size>0 0</size>
			<fontSize>0.03</fontSize>
		</text>
	</view>

	<view name="gamelist, system">
		<image name="lineUpperLeft">
			<pos>0.0 0.07</pos>
			<size>0.9 0.005</size>
			<origin>0 0</origin>
		</image>
		<image name="lineBottomLeft">
			<pos>0.0 0.93</pos>
			<size>0.9 0.005</size>
			<origin>0 0</origin>
		</image>
		<image name="lineMid">
			<pos>0.497 0.525</pos>
			<size>0.45 0.005</size>
			<origin>0 0</origin>
		</image>
		<helpsystem name="help">
			<entries>
				back,
				start,
				a,
				b,
				x,
				y,
				l,
				r,
				lt,
				rt,
				left/right,
				down,
				up,
				up/down,
				up/down/left/right,
				ltrt,
				lr
			</entries>
		</helpsystem>
	</view>
</theme>